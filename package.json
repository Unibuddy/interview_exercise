  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" -f json -o eslint_report.json",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env USER_SERVICE_URL=http://localhost:1080 jest --forceExit --runInBand",
    "test:watch": "npm run test -- --watch",
    "test:e2e": "APP_URL=http://localhost:3000 JWT_SECRET_KEY=ssssh API_KEY_FOR_CLIENT=ssssh jest --runInBand --forceExit --verbose --config ./test/jest-e2e.json",
    "test:e2e:watch": "npm run test:e2e -- --watchAll ",
    "federation-schema": "ts-node ./test/helpers/generateFederatedSchema.ts",
    "refresh": "rm -rf ./node_modules && rm ./package-lock.json && npm install",
    "token": "ts-node ./src/utils/generateToken.ts"
  },
